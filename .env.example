# AI Tutor Orchestrator - Environment Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# LLM CONFIGURATION
# ============================================================================

# OpenAI API Key (required for parameter extraction)
OPENAI_API_KEY=your_openai_api_key_here

# LLM Model to use for parameter extraction
# Options: gpt-4, gpt-4-turbo-preview, gpt-3.5-turbo
# Recommendation: Use gpt-4 for best accuracy
LLM_MODEL=gpt-4

# Temperature for LLM (0.0-1.0)
# Lower = more deterministic, Higher = more creative
# Recommendation: 0.1 for parameter extraction
LLM_TEMPERATURE=0.1

# ============================================================================
# EDUCATIONAL TOOL API ENDPOINTS
# ============================================================================

# Note Maker API
NOTE_MAKER_API_URL=http://localhost:8001/api/note-maker

# Flashcard Generator API
FLASHCARD_API_URL=http://localhost:8002/api/flashcards

# Concept Explainer API
CONCEPT_API_URL=http://localhost:8003/api/concept-explainer

# ============================================================================
# DEVELOPMENT OPTIONS
# ============================================================================

# Use mock tools instead of real APIs (useful for development/testing)
# Set to "true" to use MockToolClient
USE_MOCK_TOOLS=true

# Enable debug mode (shows detailed error messages)
DEBUG=false

# Server port
PORT=8000

# ============================================================================
# OPTIONAL: TOOL API AUTHENTICATION
# ============================================================================

# If your educational tool APIs require authentication, add keys here
# TOOL_API_KEY=your_tool_api_key
# TOOL_API_SECRET=your_tool_api_secret

# ============================================================================
# PERFORMANCE TUNING
# ============================================================================

# HTTP request timeout (seconds)
TOOL_API_TIMEOUT=30

# Maximum retries for failed requests
MAX_RETRIES=3

# ============================================================================
# LOGGING
# ============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO